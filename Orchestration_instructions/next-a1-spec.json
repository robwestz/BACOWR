Punkt 2 – Bryggtyp & Intent-koppling

{
  "id": "Next-A1-2",
  "title": "Bryggtyp — beslutsträd, triggers och koppling till intent",
  "intent_rule": {
    "description": "Val av bridge_type ska alltid valideras mot intent_extension.overall.",
    "constraints": {
      "strong": "Endast om publisher_vs_serp, anchor_vs_serp och target_vs_serp inte är 'off'.",
      "pivot": "När minst en är 'partial' men kan lösas via tematiskt brobyggande.",
      "wrapper": "När overall är 'off' utan legitim direktkoppling; etablera meta-ram först, placera länken efter."
    }
  },
  "bridge_types": {
    "strong": {
      "triggers": [
        "anchor_semantics ≈ target_page_focus",
        "publisher_niche overlap ≥ 0.7"
      ],
      "placement_rule": "Placera länken i den första tydligt relevanta huvudsektionen (ofta en H2), tidigt men efter att kontexten etablerats.",
      "trust_requirement": "Minst 1 standard/auktoritet (t.ex. T1/T2/T3 beroende på ämne)."
    },
    "pivot": {
      "triggers": [
        "Anchorn är bredare eller angränsande till target",
        "publisher_niche overlap 0.4–0.7"
      ],
      "method": "Formulera en övergripande problemformulering eller fråga; etablera en semantisk pivot som knyter ihop publisher och target.",
      "trust_requirement": "1–2 källor som stödjer pivot-vinkeln."
    },
    "wrapper": {
      "triggers": [
        "publisher_niche overlap < 0.4",
        "ankaret upplevs generiskt eller omaka"
      ],
      "method": "Bygg en neutral temaram kring metodik, risk, statistik, innovation, etik, hållbarhet eller säkerhet.",
      "trust_requirement": "2–3 källor; triangulering Publisher ↔ TRUST ↔ Target.",
      "placement_rule": "Placera länken först efter att bryggan/metaramen är etablerad."
    }
  }
}

