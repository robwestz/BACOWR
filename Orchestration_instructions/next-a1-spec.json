Punkt 5 – Publisher-fit
{
  "id": "Next-A1-5",
  "title": "Publisher-fit — röstprofiler och stil",
  "PublisherVoice": {
    "academic": {
      "tone": "saklig, källförande, låg värdeladdning",
      "structure": ["inledning", "metod", "resultat/implikation", "resurser"],
      "citation_style": "kort källhänvisning i text, trust i slutet"
    },
    "authority_public": {
      "tone": "myndighetsnära klarspråk",
      "structure": ["sammanhang", "rekommendation", "hur-gör-man", "källor"]
    },
    "consumer_magazine": {
      "tone": "lättillgänglig, nytta först, konkreta exempel",
      "structure": ["hook", "mittpunkt", "fördjupning", "call-to-value", "resurser"]
    },
    "hobby_blog": {
      "tone": "personligt sakkunnig, berättande med praktiska tips",
      "structure": ["bakgrund", "mittpunkt med case", "tips", "resurser"]
    }
  },
  "rules": {
    "infer_when_missing": "Om ingen explicit profil finns: inferera via 'Om oss' eller typiska artiklar.",
    "log_in_qc": "Vald profil/logik ska loggas i qc_extension.notes_observability.signals_used.",
    "log_in_intent": "Vald röst/roll ska loggas i intent_extension.publisher_role_intent och användas i intent_alignment.publisher_vs_serp."
  }
}
