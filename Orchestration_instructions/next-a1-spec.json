Punkt 1 – JSON-schema: BacklinkArticleOutputV2_Extensions
{
  "id": "Next-A1-1",
  "title": "BacklinkArticleOutputV2_Extensions",
  "requirements": "Inkludera alltid links_extension, qc_extension och intent_extension. Om något inte är tillämpligt: använd null, \"none\" eller tomma listor, men utelämna inte fält.",
  "schema": {
    "links_extension": {
      "bridge_type": {
        "type": "string",
        "allowed_values": ["strong", "pivot", "wrapper"]
      },
      "bridge_theme": {
        "type": ["string", "null"]
      },
      "anchor_swap": {
        "performed": {
          "type": "boolean"
        },
        "from_type": {
          "type": ["string", "null"],
          "allowed_values": ["exact", "partial", "brand", "generic", null]
        },
        "to_type": {
          "type": ["string", "null"],
          "allowed_values": ["exact", "partial", "brand", "generic", null]
        },
        "rationale": {
          "type": "string"
        }
      },
      "placement": {
        "paragraph_index_in_section": {
          "type": "integer"
        },
        "offset_chars": {
          "type": "integer"
        },
        "near_window": {
          "unit": {
            "type": "string",
            "allowed_values": ["sentence"]
          },
          "radius": {
            "type": "integer"
          },
          "lsi_count": {
            "type": "integer"
          }
        }
      },
      "trust_policy": {
        "level": {
          "type": "string",
          "allowed_values": ["T1_public", "T2_academic", "T3_industry", "T4_media"]
        },
        "fallback_used": {
          "type": "boolean"
        },
        "unresolved": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "compliance": {
        "disclaimers_injected": {
          "type": "array",
          "items": {
            "type": "string",
            "allowed_values": [
              "gambling",
              "finance",
              "health",
              "legal",
              "crypto",
              "none"
            ]
          }
        }
      }
    },
    "qc_extension": {
      "anchor_risk": {
        "type": "string",
        "allowed_values": ["low", "medium", "high"]
      },
      "readability": {
        "lix": {
          "type": "number"
        },
        "target_range": {
          "type": "string",
          "example": "35–45"
        }
      },
      "thresholds_version": {
        "type": "string",
        "example": "A1"
      },
      "notes_observability": {
        "signals_used": {
          "type": "array",
          "items": {
            "type": "string",
            "allowed_values": [
              "target_entities",
              "publisher_profile",
              "SERP_intent",
              "trust_source",
              "blueprint"
            ]
          }
        },
        "autofix_done": {
          "type": "boolean"
        }
      }
    },
    "intent_extension": {
      "serp_intent_primary": {
        "type": "string",
        "allowed_values": [
          "info_primary",
          "commercial_research",
          "transactional",
          "navigational_brand",
          "support",
          "local",
          "mixed"
        ]
      },
      "serp_intent_secondary": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "target_page_intent": {
        "type": "string"
      },
      "anchor_implied_intent": {
        "type": "string"
      },
      "publisher_role_intent": {
        "type": "string"
      },
      "intent_alignment": {
        "anchor_vs_serp": {
          "type": "string",
          "allowed_values": ["aligned", "partial", "off"]
        },
        "target_vs_serp": {
          "type": "string",
          "allowed_values": ["aligned", "partial", "off"]
        },
        "publisher_vs_serp": {
          "type": "string",
          "allowed_values": ["aligned", "partial", "off"]
        },
        "overall": {
          "type": "string",
          "allowed_values": ["aligned", "partial", "off"]
        }
      },
      "recommended_bridge_type": {
        "type": "string",
        "allowed_values": ["strong", "pivot", "wrapper"]
      },
      "recommended_article_angle": {
        "type": "string"
      },
      "required_subtopics": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "forbidden_angles": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "notes": {
        "rationale": {
          "type": "string"
        },
        "data_confidence": {
          "type": "string",
          "allowed_values": ["high", "medium", "low"]
        }
      }
    }
  }
}
