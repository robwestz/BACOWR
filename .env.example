# BACOWR Production Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# LLM Provider API Keys (at least one required)
# ============================================================================

# Anthropic Claude API (claude-3-haiku, claude-3-sonnet, etc.)
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI GPT API (gpt-4o, gpt-4o-mini, etc.)
OPENAI_API_KEY=sk-proj-...

# Google Gemini API (gemini-1.5-flash, gemini-1.5-pro, etc.)
GOOGLE_API_KEY=...

# ============================================================================
# SERP Data (optional - falls back to mock data if not provided)
# ============================================================================

# Ahrefs Enterprise API
AHREFS_API_KEY=...

# ============================================================================
# Production Settings (optional)
# ============================================================================

# Default LLM provider: auto, anthropic, openai, or google
# DEFAULT_LLM_PROVIDER=auto

# Default writing strategy: multi_stage or single_shot
# DEFAULT_WRITING_STRATEGY=multi_stage

# Default country for SERP data
# DEFAULT_COUNTRY=se

# Enable LLM-enhanced profiling by default (true/false)
# ENABLE_LLM_PROFILING=true

# Output directory for generated content
# OUTPUT_DIR=storage/output

# ============================================================================
# Batch Processing (optional)
# ============================================================================

# Max parallel workers for batch processing
# BATCH_MAX_WORKERS=1

# API rate limit (calls per minute)
# BATCH_RATE_LIMIT=10

# ============================================================================
# Logging and Monitoring (optional)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO

# Enable verbose output
# VERBOSE=false
